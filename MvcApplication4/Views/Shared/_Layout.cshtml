<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>

    <div class="page">
        <div id="header">
            <div id="title">
                <h1>SLT</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    @if (Request.CurrentExecutionFilePath != "/Result/Result")
                    {
                        if (!Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("דף הבית", "Index", "Home")</li>
                        }
                       else
                        {
                            <li>@Html.ActionLink("חיפוש", "Search_trans", "Search")</li>
                        }
                        <li>@Html.ActionLink("אודותינו", "About", "Home")</li>
                    }
                    else
                    {
                        <br />
                    }
                </ul>
            </div>
            
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
    

</body>
</html>
