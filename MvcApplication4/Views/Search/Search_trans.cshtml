@model MvcApplication4.Models.SearchModel
@{
    ViewBag.Title = "חיפוש";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) 
{

    <h2>חיפוש מתורגמן</h2>
<p>
    הכנס ערכים לחיפוש
</p>
    
    <div>
        <div class="editor-label">    
            @Html.LabelFor(m => m.First)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.First)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Last)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Last)
        </div>
        <div class="editor-label">    
            @Html.LabelFor(m => m.Day)
        </div>
        <div class="editor-field">
             <select id="drpDashboardSpendChart" class="dropdownclass" name="drpSpendChartId" onchange="return DashboardSpendDateChange();">
                 <option id="0">Choose a date</option>
                 <option id="1">Last 7 days</option>
                 <option id="2">Last 1 month</option>
                 <option id="3">Last 3 months</option>
             </select>
        </div>

        <h2>@ViewBag.Message</h2>

        <div class="editor-label">    
            @Html.LabelFor(m => m.Hour)
            </div>

        <div class="editor-field">
            @Html.TextBoxFor(m => m.Hour)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.City)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Sex)

        </div>
        <p>
            <input type="submit" value="חיפוש" />
        </p>
    </div>
}
